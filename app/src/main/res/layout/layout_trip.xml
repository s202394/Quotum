<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_10sdp"
    android:theme="@style/Theme.MaterialComponents.Light"
    app:cardCornerRadius="@dimen/_10sdp">

    <ImageView
        android:id="@+id/image_view_background"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_170sdp"
        android:src="@drawable/nature" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_170sdp"
        android:background="#59000000">

        <TextView
            android:id="@+id/text_view_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_dollar"
            android:padding="@dimen/_10sdp"
            android:text="$300"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_10sdp"
            android:textStyle="bold" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="@dimen/_16sdp">

            <ImageView
                android:id="@+id/i1"
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp"
                android:contentDescription="@null"
                android:src="@drawable/ic_fiber_manual_record_black_24dp"
                app:layout_constraintBottom_toBottomOf="@id/text_view_from"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/text_view_from" />

            <TextView
                android:id="@+id/text_view_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_2sdp"
                android:layout_marginLeft="@dimen/_2sdp"
                android:text=""
                android:textColor="@android:color/white"
                android:textSize="@dimen/_14sdp"
                app:layout_constraintStart_toEndOf="@+id/i1"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/v1"
                android:layout_width="@dimen/_1sdp"
                android:layout_height="@dimen/_20sdp"
                android:background="@color/white"
                app:layout_constraintEnd_toEndOf="@id/i1"
                app:layout_constraintStart_toStartOf="@id/i1"
                app:layout_constraintTop_toBottomOf="@id/i1" />

            <ImageView
                android:id="@+id/i2"
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:contentDescription="@null"
                android:src="@drawable/ic_person_pin_circle_black_24dp"
                app:layout_constraintEnd_toEndOf="@id/i1"
                app:layout_constraintStart_toStartOf="@id/i1"
                app:layout_constraintTop_toBottomOf="@id/i1" />

            <TextView
                android:id="@+id/text_view_destination"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@android:color/white"
                android:textSize="@dimen/_15sdp"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@id/i2"
                app:layout_constraintStart_toEndOf="@id/i2"
                app:layout_constraintTop_toTopOf="@id/i2" />

            <TextView
                android:id="@+id/textview_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_25sdp"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/i2"
                app:layout_constraintTop_toTopOf="@id/i2" />

            <View
                android:id="@+id/v2"
                android:layout_width="@dimen/_1sdp"
                android:layout_height="@dimen/_12sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:background="@color/white"
                app:layout_constraintBottom_toBottomOf="@id/textview_date"
                app:layout_constraintStart_toEndOf="@id/textview_date"
                app:layout_constraintTop_toTopOf="@id/textview_date" />

            <TextView
                android:id="@+id/textview_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/_10sdp"
                app:layout_constraintBottom_toBottomOf="@id/v2"
                app:layout_constraintStart_toEndOf="@id/v2"
                app:layout_constraintTop_toTopOf="@id/v2" />

            <TextView
                android:id="@+id/textview_vehicle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_person_pin_circle_black_24dp"
                android:drawablePadding="@dimen/_2sdp"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintStart_toStartOf="@id/textview_date"
                app:layout_constraintTop_toBottomOf="@id/textview_date" />

            <View
                android:id="@+id/v3"
                android:layout_width="@dimen/_1sdp"
                android:layout_height="@dimen/_12sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:background="@color/white"
                app:layout_constraintBottom_toBottomOf="@id/textview_vehicle"
                app:layout_constraintStart_toEndOf="@id/textview_vehicle"
                app:layout_constraintTop_toTopOf="@id/textview_vehicle" />

            <TextView
                android:id="@+id/tv6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:drawableStart="@drawable/ic_person_pin_circle_black_24dp"
                android:drawablePadding="@dimen/_2sdp"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintBottom_toBottomOf="@+id/v3"
                app:layout_constraintStart_toStartOf="@id/v3"
                app:layout_constraintTop_toTopOf="@id/v3" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>